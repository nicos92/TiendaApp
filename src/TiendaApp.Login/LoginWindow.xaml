<Window x:Class="TiendaApp.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiendaApp.Login"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" FontSize="16" Background="#FF191D21" Foreground="#FFF8F9FA" MinWidth="800" Width="800" MinHeight="450" MaxWidth="800" MaxHeight="450" Padding="2,2,2,2">
    <StackPanel Height="300" Width="700" Background="#FF212529">
        <Label Content="Inicio de Sesi칩n" HorizontalAlignment="Center" Foreground="#FFF8F9FA" FontSize="36" Margin="0,8,0,0" FontWeight="Bold"/>
        <Label Content="DNI:" Foreground="#FFF8F9FA" FontSize="20" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,8,0,0" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="-105"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="TxtDni" TextWrapping="Wrap" Width="256" Background="#FF191D21" Foreground="#FFF8F9FA" BorderThickness="0,0,0,4" Margin="0,8,0,0"/>
        <Label Content="Contrase침a:" Foreground="#FFF8F9FA" FontSize="20" FontWeight="DemiBold" HorizontalContentAlignment="Center" Margin="0,8,0,0" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="-72"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <PasswordBox x:Name="TxtPass" Width="256" Background="#FF191D21" Foreground="#FFF8F9FA" BorderThickness="0,0,0,4"/>
        <Button x:Name="BtnLogin" Content="Iniciar Sesi칩n" Width="156" Margin="0,8,0,0" Foreground="#FFF8F9FA" FontSize="18" BorderBrush="{x:Null}" Height="36">
            <Button.Background>
                <LinearGradientBrush EndPoint="1,0" StartPoint="0,1">
                    <GradientStop Color="#FF0D6EFD" Offset="0"/>
                    <GradientStop Color="#FF0A58CA" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                    Background="{TemplateBinding Background}"
                    BorderBrush="Gray" 
                    BorderThickness="1"
                    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF4CAF50"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="DarkGreen"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="BtnRecuperarContrasena" Content="Recuperar Contrase침a" Width="174" Background="#000D6EFD" Foreground="#FFF8F9FA" FontSize="16" Margin="0,8,0,0" BorderBrush="{x:Null}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
        Background="{TemplateBinding Background}"
        BorderBrush="Gray" 
        BorderThickness="1"
        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" 
                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF4CAF50"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="DarkGreen"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>

</Window>
