<UserControl x:Class="TiendaApp.Resources.Controls.CustomMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400"
             x:Name="Root">

    <UserControl.Resources>
        <!-- Iconos SVG -->
        <Geometry x:Key="InfoIcon">M12,2C6.48,2 2,6.48 2,12s4.48,10 10,10 10,-4.48 10,-10S17.52,2 12,2zM13,17h-2v-6h2v6zM13,9h-2V7h2v2z</Geometry>
        <Geometry x:Key="WarningIcon">M12,2L1,21h22L12,2z M13,18h-2v-2h2v2z M13,14h-2v-4h2v4z</Geometry>
        <Geometry x:Key="ErrorIcon">M12,2C6.47,2 2,6.47 2,12s4.47,10 10,10 10,-4.47 10,-10S17.53,2 12,2zM17,15.59L15.59,17 12,13.41 8.41,17 7,15.59 10.59,12 7,8.41 8.41,7 12,10.59 15.59,7 17,8.41 13.41,12 17,15.59z</Geometry>
        <Geometry x:Key="SuccessIcon">M12,2C6.48,2 2,6.48 2,12s4.48,10 10,10 10,-4.48 10,-10S17.52,2 12,2zM10,17l-5,-5 1.41,-1.41L10,14.17l7.59,-7.59L19,8l-9,9z</Geometry>
        <Geometry x:Key="QuestionIcon">M12,2C6.48,2 2,6.48 2,12s4.48,10 10,10 10,-4.48 10,-10S17.52,2 12,2zM13,19h-2v-2h2v2zM15.07,11.25l-0.9,0.92C13.45,12.89 13,13.5 13,15h-2v-0.5c0,-1.1 0.45,-2.1 1.17,-2.83l1.24,-1.26c0.37,-0.36 0.59,-0.86 0.59,-1.41c0,-1.1 -0.9,-2 -2,-2s-2,0.9 -2,2H8c0,-2.21 1.79,-4 4,-4s4,1.79 4,4c0,0.88 -0.36,1.68 -0.93,2.25z</Geometry>
    </UserControl.Resources>

    <Border CornerRadius="16"
            Background="{DynamicResource SurfaceContainerHighBrush}"
            BorderBrush="{DynamicResource OutlineBrush}"
            BorderThickness="1"
            Padding="24">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header con ícono y título -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal"
                        Margin="0,0,0,16">
                <!-- Ícono -->
                <Path x:Name="PART_MessageIcon"
                      Data="{StaticResource InfoIcon}"
                      Fill="{DynamicResource PrimaryBrush}"
                      Width="24"
                      Height="24"
                      Margin="0,0,12,0"
                      Stretch="Uniform"/>

                <!-- Título -->
                <TextBlock x:Name="PART_TitleText"
                           Text="Título"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource OnSurfaceBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Contenido del mensaje -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="200"
                          Margin="0,0,0,24">
                <TextBlock x:Name="PART_MessageText"
                           Text="Mensaje aquí..."
                           FontSize="16"
                           Foreground="{DynamicResource OnSurfaceVariantBrush}"
                           TextWrapping="Wrap"/>
            </ScrollViewer>

            <!-- Botones -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        >
                <!-- Botón 1 (generalmente Cancelar/No) -->
                <Button x:Name="PART_Button1"
                        Content="Cancelar"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        MinWidth="100"
                        Click="Button1_Click"/>

                <!-- Botón 2 (generalmente Aceptar/Sí) -->
                <Button x:Name="PART_Button2"
                        Content="Aceptar"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        MinWidth="100"
                        Click="Button2_Click"/>

                <!-- Botón 3 (opcional) -->
                <Button x:Name="PART_Button3"
                        Content="Opcional"
                        Style="{DynamicResource TextButtonStyle}"
                        MinWidth="100"
                        Visibility="Collapsed"
                        Click="Button3_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
